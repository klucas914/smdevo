<!DOCTYPE html>
<html>
  <head>
    <title>Formed</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
    <nav class="navbar navbar-inverse" id="admin">
    <div class="container">
      <div class="navbar-header">
        <ul class="nav navbar-nav">
          <% if user_signed_in? %>
             <li class="dropdown">
               <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                 <%= current_user.name %>
                 <span class="caret"></span>
               </a>
               <ul class="dropdown-menu" role="menu">
                  <li><%= link_to 'Profile', edit_user_registration_path %></li>
                  <li><%= link_to 'Log out', destroy_user_session_path, method: :delete %></li>
               </ul>
           <% end %>
        </ul>
      </div>
    </div>
  </nav>

    <div class="jumbotron jumbotron-fluid">
      <div class="container">
        <h1>Formed</h1>
          <p>Read | Reflect | Respond</p>
      </div>
    </div>
   

    <nav class="navbar navbar-light bg-faded">
      <a class="navbar-brand" href="<%= root_path %>">Home</a>
      
      <ul class="nav navbar-nav pull-xs-right">
         
         <li class="nav-item">
         <li class="nav-item">
         <a class="nav-link" href="<%= tracks_path %>">Tracks</a>
         </li>
         <li class="nav-item">
         <a class="nav-link" href="<%= groups_path %>">Groups</a>
         </li>
         <li class="nav-item">
         <a class="nav-link" href="<%= users_path %>">Users</a>
         </li>
    
      </ul>
      
    </nav>
 
   
<body>

  <% if notice %>
    <p class="alert alert-success"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="alert alert-danger"><%= alert %></p>
  <% end %>
    
    <%= yield %>
  </body>
</html>
