<div class="container">
  <h1>Formed Organizations</h1>
  <div class="container">
    <%= form_for :organization, url: organizations_path do |f| %>
      <br>
        <div class="form-group">
          <%= f.label :New_organization %><br>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="actions">
          <%= f.submit  %>
        </div>
    <% end %>
  </div>
  <br>
  <div class="card">
    <div class="card-block">
      <table class="table table-striped">
        <tbody>
          <% @organizations.each do |organization| %>
            <tr>
              <td><%= organization.name %>  |
              <%= link_to 'View', organization_path(organization) %>  |
              <%= link_to 'Edit', edit_organization_path(organization) %>  |
              <%= link_to 'Delete', organization, method: :delete, data: { confirm: 'Are you sure?' }  %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>